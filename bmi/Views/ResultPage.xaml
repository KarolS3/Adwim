<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BMICalc.Views.ResultPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Wynik BMI">

    <VerticalStackLayout
        Padding="20"
        Spacing="20"
        VerticalOptions="Center">

        <Label
            Text="Twoje BMI:"
            FontSize="22"
            HorizontalOptions="Center" />

        <Label
            Text="{Binding Bmi}"
            FontSize="40"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Label
            Text="{Binding Category}"
            TextColor="{Binding CategoryColor}"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>
